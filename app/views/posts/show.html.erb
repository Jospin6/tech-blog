<div class="mx-auto md:w-2/3 w-full flex px-2 md:px-0">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <div class="pt-2 mt-4 flex justify-end border-t-[1px] border-gray-400">
      
      <% if can? :manage, :all %>
        <%= link_to "Edit", edit_post_path(@post), 
          class: "mt-2 text-blue-500  font-medium mr-6" %>
        <%= button_to "Destroy", @post, method: :delete, 
          class: "mt-2 rounded-lg px-5 bg-red-600 text-white font-medium" %>
      <% end %>
    </div>
  </div>
</div>
