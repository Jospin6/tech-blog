<div class="text-red-500 grid grid-cols-6 gap-4">
    <div class="col-span-4 h-[200px]">

        <% if notice.present? %>
            <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
        <% end %>

        <% content_for :title, "Posts" %>

        <% @posts.each do |post| %>
            <%= render 'postItem', post: post %>
        <% end %>
    </div>
    <div class="col-span-2 h-[200px] bg-green-300">
    
    </div>
</div>