<div class="md:grid md:grid-cols-6 md:gap-4 px-2 md:px-[0px]">
    <div class="md:col-span-4 md:h-[200px] h-auto">

        <% content_for :title, "Posts" %>

        <% @posts.each do |post| %>
            <%= render 'postItem', post: post %>
        <% end %>
    </div>
    <div class="md:col-span-2 mt-[10px] md:mt-[0px] h-auto">
        <div class="h-[250px]">
            <%= image_tag @user.image_url, 
            class: "w-full h-[250px] object-cover rounded-t-lg" %>
        </div>
        <div class="flex justify-between mt-2">
            <span class="text-[18px]"> <%= @user.username %> </span>
            <span class="text-[14px]">My portfolio</span>
        </div>
        <div class="text-[14px]">
            Full-stack Developer
        </div>
        <div class="flex flex-wrap text-[14px] font-[500]">  
            <%= @user.skills %>
        </div>
        <div class="text-[14px]">
            Feel free to <a href="#" class="text-blue-600">connect with me</a>
        </div>
        <div class="flex justify-center mt-2">
            <a href="#" class="mr-2 text-2xl text-gray-400 hover:text-black"><%= fa_icon "github" %></a>
            <a href="#" class="mr-2 text-2xl text-gray-400 hover:text-black"><%= fa_icon "linkedin" %></a>
            <a href="#" class="mr-2 text-2xl text-gray-400 hover:text-black"><%= fa_icon "twitter" %></a>
            <a href="#" class="mr-2 text-2xl text-gray-400 hover:text-black"><%= fa_icon "medium" %></a>
        </div>
        <div class="text-[14px] text-gray-700 text-center py-2">
            Made with <span class="text-red-600"><%= fa_icon "heart" %></span> by Jospin Ndagano &copy; 2024
        </div>
    </div>
</div>